#!/bin/bash
bins=()
for file in $(nenv ls ~/.nix-profile/bin) ;
do
	local_bin="/var/home/$USER/.local/bin/$file"
	touch $local_bin
	echo "#!/bin/bash
ne $file "'"$@"' > "$local_bin"
	chmod +x "$local_bin"
	bins+=( "$file" )
done
cur_dir=$pwd
cd ~/.local/bin
apps=()
for file in * ;
do
	apps+=( "$file" )
done

diff="$(echo ${apps[@]} ${bins[@]} | tr ' ' '\n' | sort | uniq -u)"
for app in $diff
do
	rm -rf /var/home/$USER/.local/bin/$app
done
cd $cur_dir
